# Warhammer Fantasy Chat - Client Environment Variables

# API Base URL (automatically set by Vite based on environment)
# Development: http://localhost:5000/api
# Production: /.netlify/functions
VITE_API_BASE_URL=

# WebSocket URL (automatically set based on environment)
# Development: ws://localhost:5000/ws
# Production: Uses polling fallback
VITE_WS_URL=

# Application Settings
VITE_APP_NAME="Warhammer Fantasy Chat"
VITE_APP_VERSION="1.0.0"

# Feature Flags
VITE_ENABLE_WEBSOCKET_FALLBACK=true
VITE_ENABLE_DEBUG_LOGGING=false
VITE_POLLING_INTERVAL=2000

# External Services
VITE_PIXABAY_API_KEY=
VITE_UNSPLASH_ACCESS_KEY=

# Netlify Environment Detection
NETLIFY=
NETLIFY_DEV=
URL=
DEPLOY_PRIME_URL=
